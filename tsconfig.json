{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.stories.@(ts|tsx)",
    "**/*.stories.d.@(ts|tsx)",
    "**/*.test.@(ts|tsx)",
    "./src/setupTests.ts"
  ]
}
